

@using HelloAngular2.Models
@model List<Heat>

@{
    ViewBag.Title = "Heat";
}

@if (Model.Count > 0)
{
    <table style="border:solid 1px">
        <thead>
            <tr>
                <th>Contract Name</th>
                <th>Temperatures</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Heat contract in Model)
            {
                <tr>
                    <td>@contract.ContractName</td>
                    <td>
                        <ul>
                        @foreach (var item in contract.Temperatures)
                    { <li>@item</li>

                    }
                            </ul>
                     </td>
                    <td>@contract.Price EUR</td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h2>No data</h2>
}
